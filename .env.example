# This file contains environment variables for local development.
# It should not be committed to version control.
# Instead, create a copy named .env and fill in your values.

# Port for the LibSQL database server (sqld)
DB_PORT=8080

# Port for the Next.js web application
WEB_PORT=3000

# Database URL for local development without Docker.
# Uses a local SQLite file.
DATABASE_URL="file:./data/local.db"

# OpenAI API Key for AI-related features
OPENAI_API_KEY=""

# Authentication URL (e.g., for NextAuth.js)
AUTH_URL="http://localhost:3000"

# Set to "true" for development environments if your AUTH_URL is not HTTPS
AUTH_TRUST_HOST="true"