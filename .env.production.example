# Production Environment Configuration
# Copy this to .env.production and fill in actual values

# Database Configuration - Production
# Use Turso (cloud-hosted LibSQL) for production
TURSO_DATABASE_URL=libsql://your-database.turso.io
TURSO_AUTH_TOKEN=your_turso_auth_token

# NextAuth Configuration - Production
# CRITICAL: Generate a new secret for production using: openssl rand -base64 32
AUTH_SECRET=generate_a_new_secret_for_production
AUTH_TRUST_HOST=true

# Email Configuration (for magic links, notifications)
AUTH_MAILGUN_KEY=your_mailgun_api_key
AUTH_MAILGUN_FROM=noreply@yourdomain.com

# PostHog Analytics - Production
NEXT_PUBLIC_POSTHOG_KEY=your_posthog_project_api_key
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com
POSTHOG_ENABLED=1

# AI Configuration - Production
OPENAI_API_KEY=your_openai_api_key_here

# Kroger API Configuration - Production
KROGER_CLIENT_ID=your_production_client_id
KROGER_CLIENT_SECRET=your_production_client_secret
KROGER_REDIRECT_URI=https://yourdomain.com/api/kroger/callback
KROGER_API_BASE_URL=https://api.kroger.com/v1

# Port Configuration (if needed for production preview)
WEB_PORT=3000
DB_PORT=8080
